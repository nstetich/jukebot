extends layout

block content
  style.
    div {
      margin-bottom: 5px;
    }
  
    #token {
      width: 20em;
    }
    
    div.socketAction {
      width: 300px;
      border-style: solid;
      border-radius: 12px;
      border-width: 2px;
      padding: 10px;
    }

    #console {
      width: 30em;
      height: 30em;
    }

  script(src="/socket.io/socket.io.js")
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
  script(src="/js/testclient.js")

  h1= title
  h2 Actions
  div.socketAction
    div Connect
    div
      label(for="token") Token: 
      input#token(type="text")
    div
      button#connect Connect
  div.socketAction
    div Play A Song
    div
      label(for="songTitle") Title: 
      input#songTitle(type="text")
    div
      label(for="songArtist") Artist: 
      input#songArtist(type="text")
    div
      button#play Play
  h2 Console
  div
    textarea#console
